<h3>Wine List</h3>

<p>Recently viewed: <%= @wine ? @wine.brand : "Haven't viewed any wines"%></p>

<div class="card cyan lighten-1">
        <div class="card-content white-text">
          <span class="card-title">Your library</span>
            <ul>
                <% @user_wines.each do |wine| %>
                    <li><a href="/wines/<%= wine.id %>"><%= wine.brand%> - <%= wine.varietal%></a></li>
                <% end %>
            </ul>
        </div>
</div>
<div class="card cyan lighten-1">
        <div class="card-content white-text">
          <span class="card-title">All wines</span>
            <ul>
                <% @wines.each do |wine| %>
                    <li><a href="/wines/<%= wine.id %>"><%= wine.brand %>  - <%= wine.varietal%></a></li>
                <% end %>
            </ul>
        </div>
</div>
<div class="card cyan lighten-1">
        <div class="card-content white-text">
          <span class="card-title">Recently added</span>
            <ul>
                <% @wines_recently_added.each do |wine| %>
                    <li><a href="/wines/<%= wine.id %>"><%= wine.brand %>  - <%= wine.varietal%></a></li>
                <% end %>
            </ul>
        </div>
</div>