<!DOCTYPE html>
  <html>
    <head>
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <script src="https://kit.fontawesome.com/88ad912d1f.js" crossorigin="anonymous"></script>
      <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
      <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.0/js/materialize.min.js"></script>-->
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      <title>Wine Library</title>
    </head>

    <body>
      <div class="navbar-fixed">
        <nav class="#b71c1c red darken-4">
          <div class="container">
            <div class="nav-wrapper">
              <a href="/" class="brand-logo">Wine Library</a>
              <a href="#" data-target="mobile-nav" class="sidenav-trigger">
                <i class="material-icons">menu</i>
              </a>
              <ul class="right hide-on-med-and-down">
              <% if !is_logged_in? %>
                  <li><a href="/login">Login</a></li>
                  <li><a href="/signup">Signup</a></li>
              <% else %>
                  <li><a href="/logout">Logout</a></li>
                  <li><a href="/wines">Wines</a></li>
                  <li><a href="/wines/new">Add Wine</a></li>
              <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </div>
      <ul class="sidenav" id="mobile-nav">
      <% if !is_logged_in? %>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">Signup</a></li>
      <% else %>
        <li><a href="/logout">Logout</a></li>
        <li><a href="/wines">Wines</a></li>
        <li><a href="/wines/new">Create Wine</a></li>
      <% end %>
      </ul>


      <section class="slider">
        <ul class="slides">
      <li>
        <img src="https://www.usnews.com/dims4/USNEWS/048b2ad/2147483647/thumbnail/640x420/quality/85/?url=http%3A%2F%2Fcom-usnews-beam-media.s3.amazonaws.com%2F8c%2Ff9%2Fc71a35a64243b81935cb41d8f1ac%2F1-intro.jpg"> <!-- random image -->
        <div class="caption left-align">
          <h1>Visit the wineries</h1>
          <h5 class="light grey-text text-lighten-3 hide-on-small-only">Take a tour of your favorite wineries</h5>
        </div>
      </li>
      <li>
        <img src="https://cdn.vox-cdn.com/thumbor/25IbqLQvtqdxz_UP-PHKqw-u6wo=/0x0:2400x1600/1820x1213/filters:focal(1008x608:1392x992):format(webp)/cdn.vox-cdn.com/uploads/chorus_image/image/63977740/GettyImages_160836693.0.jpg"> <!-- random image -->
        <div class="caption right-align">
          <h1>Wines For All Budgets</h1>
          <h5 class="light grey-text text-lighten-3 hide-on-small-only">Discover our selection of over 1000 wines worldwide</h5>
        </div>
      </li>
      <li>
        <img src="https://static.toiimg.com/thumb/msid-64745651,imgsize-33475,width-800,height-600,resizemode-75/64745651.jpg">
        <div class="caption right-align">
          <h1>Best Wines 2020</h1>
          <h5 class="light grey-text text-lighten-3 hide-on-small-only">Enjoy the best wines of 2020</h5>
        </div>
      </li>
    </ul>
      </section>

      <div class="container">
        <%= yield %>
      </div>

      <footer class="section #b71c1c red darken-4 white-text center">
        <p class="flow-text">Wine Library &copy; 2021 </p>
      </footer>
      <!--JavaScript at end of body for optimized loading-->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

      <script>
        // Sidenav
        const sideNav = document.querySelector('.sidenav');
        M.Sidenav.init(sideNav, {});

        // Slider
        const slider = document.querySelector('.slider');
        M.Slider.init(slider, {
          indicators: false,
          height: 500,
          transition: 500,
          interval: 6000
        });

      </script>
    </body>
  </html>
